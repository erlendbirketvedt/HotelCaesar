<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
    android:id="@+id/check_in"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="24dp"
        android:text="@string/checkin_guest" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/check_in_resnr_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checkin_resnr" />

        <Button
            android:id="@+id/check_in_ccnr_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checkin_ccnr" />

    </LinearLayout>

    <TextView
        android:id="@+id/check_out_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:text="@string/checkout_guest" />

    <Button
        android:id="@+id/check_out_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkout_room" />

</LinearLayout>